---
import logo from "../assets/fabric.avif";
---
<header class="bg-primary w-full border-b shadow-sm z-50">
  <div class="max-w-6xl mx-auto px-6 py-4 flex items-center justify-between">
    <!-- Logo + Brand -->
    <div class="flex items-center gap-2">
      <div class="w-14 h-14 relative aspect-square">
        <img
          src={logo.src ?? logo}
          alt="Amrita Global Enterprises Logo"
          width="56"
          height="56"
          class="w-full h-full object-cover"
          loading="eager"
        />
      </div>
      <div class="leading-tight text-center sm:text-left">
        <h1 class="font-extrabold text-lg text-gray-800">
          Amrita Global Enterprises
        </h1>
      </div>
    </div>

    <!-- Hamburger for Mobile -->
    <div class="md:hidden flex flex-col relative">
      <input id="nav-toggle" type="checkbox" class="peer hidden" />
      <label for="nav-toggle" class="cursor-pointer block">
        <span class="sr-only">Toggle navigation menu</span>
        <svg
          class="w-6 h-6 text-gray-800"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </label>

      <!-- Mobile Full-Width Dropdown Menu -->
      <div
        class="peer-checked:flex hidden absolute top-12 right-2 min-w-[250px] w-fit flex-col gap-4 px-6 py-6 bg-white border border-gray-200 text-gray-700 font-medium shadow-xl rounded-md z-40"
      >
        <nav class="flex flex-col gap-4">
          <a href="#about" class="hover:text-teal-700 transition">About</a>
          <a href="#product" class="hover:text-teal-700 transition">Product</a>
          <a href="#contact" class="hover:text-teal-700 transition">Contact</a>
        </nav>
        <hr class="border-t border-gray-200 my-2" />
        <a
          href="/brochure.pdf"
          download
          class="inline-flex items-center gap-2 bg-teal-700 text-white px-4 py-2 rounded-full max-w-[200px] font-semibold hover:bg-teal-600 transition"
        >
          <span>ðŸ“„</span> PDF
        </a>
        <div class="flex items-center gap-3 text-sm mt-2">
          <div
            class="w-8 h-8 rounded-full bg-teal-800 flex items-center justify-center text-white"
          >
            ðŸ“ž
          </div>
          <div>
            <p class="text-gray-500 leading-none">Support</p>
            <p class="font-bold text-gray-800 leading-none">+91-9913140434</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Desktop Nav -->
    <div class="hidden md:flex items-center justify-between">
      <nav class="hidden sm:flex gap-6 text-gray-700 font-medium">
        <a href="#about" class="hover:text-teal-700 transition">About</a>
        <a href="#product" class="hover:text-teal-700 transition">Product</a>
        <a href="#contact" class="hover:text-teal-700 transition">Contact</a>
      </nav>
    </div>

    <!-- PDF + Support Desktop -->
    <div class="hidden md:flex items-center justify-center gap-10">
      <a
        href="/brochure.pdf"
        download
        class="inline-block bg-teal-700 text-white px-4 py-2 rounded-full font-semibold hover:bg-teal-600 transition"
        >ðŸ“„ PDF</a
      >
      <div class="flex items-center gap-2 text-sm">
        <div
          class="w-8 h-8 rounded-full bg-teal-800 flex items-center justify-center text-white text-base"
        >
          ðŸ“ž
        </div>
        <div>
          <p class="text-gray-500">Support</p>
          <p class="font-bold text-gray-800">+91-9913140434</p>
        </div>
      </div>
    </div>
  </div>
</header>
