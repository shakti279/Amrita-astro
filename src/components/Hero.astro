---
import fabricImage from "../assets/fabric.avif";
---

<header class="relative h-72 md:h-96" role="banner">
  <!-- Background Image and Overlay -->
  <div class="absolute inset-0 w-full h-full">
    <img
      src="fabric.avif"
      alt="Woman wearing premium georgette fabric"
      width="1268"
      height="384"
      loading="eager"
      fetchpriority="high"
      class="object-cover w-full h-full"
      style="z-index:0;"
    />
    <div
      class="absolute inset-0 bg-black opacity-30 w-full h-full"
      aria-hidden="true"
      style="z-index:1;"
    ></div>
  </div>

  <!-- Main Hero Content -->
  <div
    class="relative z-10 max-w-8xl mx-auto grid grid-cols-1 md:grid-cols-2 items-center gap-10 px-6 h-full"
  >
    <div
      class="bg-secondary/80 p-8 rounded-lg"
      aria-labelledby="hero-title"
      aria-describedby="hero-sub"
    >
      <h1
        id="hero-title"
        class="text-xl md:text-2xl font-[400] san text-white mb-6"
      >
        Georgette Fabric Manufacturers
      </h1>
      <p id="hero-sub" class="text-white pop text-[14px]">
        High-quality fabrics crafted in Surat, perfect for designers, exporters,
        and resellers.
      </p>
    </div>
  </div>
</header>
